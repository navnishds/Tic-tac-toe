<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/tic_tac_toe_image"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="250dp"
        android:maxHeight="250dp"
        android:scaleType="fitCenter"
        android:src="@drawable/tic_tac_toe" />

    <Button
        android:id="@+id/button_single_player"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:layout_gravity="center"
        android:background="#000000"
        android:onClick="single_player"
        android:text="Single Player"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button_multi_player"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:layout_gravity="center"
        android:background="#000000"
        android:onClick="multi_player"
        android:text="Multi Player"
        android:textColor="@android:color/white"
        tools:ignore="OnClick" />

</LinearLayout>